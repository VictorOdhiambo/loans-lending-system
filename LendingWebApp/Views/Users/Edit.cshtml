@model LoanApplicationService.Service.DTOs.UserModule.UserDTO
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit User</h2>
    <form asp-action="Edit" asp-controller="Users" method="post">
        <input type="hidden" name="id" value="@Model.UserId" />
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input class="form-control" value="@Model.Username" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" value="@Model.Email" disabled />
        </div>
        <div class="mb-3">
            <label class="form-label">Role</label>
            <select class="form-select" name="role">
                <option value="SuperAdmin" @(Model.Role == "SuperAdmin" ? "selected" : "")>SuperAdmin</option>
                <option value="Admin" @(Model.Role == "Admin" ? "selected" : "")>Admin</option>
                <option value="Customer" @(Model.Role == "Customer" ? "selected" : "")>Customer</option>
            </select>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="isActive" value="true" id="isActiveCheck" @(Model.IsActive ? "checked" : "") />
            <label class="form-check-label" for="isActiveCheck">Active</label>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/Users/Details/@Model.UserId" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div> 