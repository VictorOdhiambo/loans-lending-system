@model LoanApplicationService.Service.DTOs.UserModule.UserDTO
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>User Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Model.Role</dd>
    </dl>
    <a href="/Users" class="btn btn-secondary">Back to All Users</a>
    @if (User.IsInRole("SuperAdmin"))
    {
        <a href="/Users/Edit/@Model.UserId" class="btn btn-primary ms-2">Edit</a>
    }
</div> 