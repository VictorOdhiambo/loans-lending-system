@model LoanApplicationService.Service.DTOs.UserModule.ForgotPasswordDto

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Forgot Password";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-card">
                <div class="form-card-header">
                    <h2>Forgot Password</h2>
                    <p class="mb-0">Enter your email address to reset your password</p>
                </div>

                <div class="form-card-body">
                    <form method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email address</label>
                            <input id="Email" name="Email" class="form-control" placeholder="Enter your email address" value="@Model.Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-card-footer">
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary">Send Reset Link</button>
                            </div>

                            <div class="text-center">
                                <a href="/Home/Index" class="btn btn-link">Back to Login</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 