@model IEnumerable<Loan_application_service.DTOs.loanproductDto>

@{
    ViewData["Title"] = "Loan Products";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Loan Products</h2>
        <a href="/loan_product/create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm border rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductType)</th>
                    <th>@Html.DisplayNameFor(model => model.MinAmount)</th>
                    <th>@Html.DisplayNameFor(model => model.MaxAmount)</th>
                    <th>@Html.DisplayNameFor(model => model.InterestRate)</th>
                    <th>@Html.DisplayNameFor(model => model.MinTermMonths)</th>
                    <th>@Html.DisplayNameFor(model => model.MaxTermMonths)</th>
                    <th>@Html.DisplayNameFor(model => model.EligibilityCriteria)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductType)</td>
                        <td>@Html.DisplayFor(modelItem => item.MinAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaxAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.InterestRate)</td>
                        <td>@Html.DisplayFor(modelItem => item.MinTermMonths)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaxTermMonths)</td>
                        <td>@Html.DisplayFor(modelItem => item.EligibilityCriteria)</td>
                        <td class="text-end">
                            <a href="/loan_product/@item.ProductId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="/loan_product/delete/@item.ProductId" class="btn btn-sm btn-outline-danger me-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
