@model LoanApplicationService.Service.DTOs.LoanModule.LoanProductDto

@{
    ViewData["Title"] = "Delete Loan Product";
}

<h2>Delete Loan Product</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this loan product?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Product Name</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>

            <dt class="col-sm-4">Interest Rate</dt>
            <dd class="col-sm-8">@Model.InterestRate %</dd>

            <dt class="col-sm-4">Minimum Amount</dt>
            <dd class="col-sm-8">@Model.MinAmount</dd>

            <dt class="col-sm-4">Maximum Amount</dt>
            <dd class="col-sm-8">@Model.MaxAmount</dd>

            <dt class="col-sm-4">Term (Months)</dt>
            <dd class="col-sm-8">@Model.MinTermMonths - @Model.MaxTermMonths</dd>


        </dl>
    </div>
</div>

@using (Html.BeginForm("Delete", "LoanProduct", new { id = Model.ProductId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index", "LoanProduct")" class="btn btn-secondary">Cancel</a>
    </div>
}
