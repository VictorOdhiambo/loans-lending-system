@model Loan_application_service.DTOs.loanproductDto

@{
    ViewData["Title"] = "Delete Loan Product";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Loan Product</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="mb-0">Are you sure you want to delete this loan product?</h5>
            </div>

            <dl class="row">
                <dt class="col-sm-4 fw-bold">Product Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-4 fw-bold">Product Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductType)</dd>

                <dt class="col-sm-4 fw-bold">Minimum Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MinAmount)</dd>

                <dt class="col-sm-4 fw-bold">Maximum Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxAmount)</dd>

                <dt class="col-sm-4 fw-bold">Interest Rate</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.InterestRate)</dd>

                <dt class="col-sm-4 fw-bold">Minimum Term (Months)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MinTermMonths)</dd>

                <dt class="col-sm-4 fw-bold">Maximum Term (Months)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaxTermMonths)</dd>

                <dt class="col-sm-4 fw-bold">Eligibility Criteria</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EligibilityCriteria)</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill me-1"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
