@model IEnumerable<LoanApplicationService.Service.DTOs.LoanApplicationModule.LoanApplicationDto>

@{
    ViewBag.Title = "Customer View";
}

<h1>Customer View</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm border rounded">
        <thead class="table-dark">
                <thead class="table-dark">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ApplicationId)</th>
                <th>@Html.DisplayNameFor(model => model.RequestedAmount)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.ApplicationDate)</th>
                <th class=" text-end"> Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ApplicationId</td>
                    <td>@item.RequestedAmount</td>
                    <td>@item.Status</td>
                    <td>@item.ApplicationDate</td>
                   @if (item.Status == LoanApplicationService.CrossCutting.Utils.LoanStatus.Approved || item.Status == LoanApplicationService.CrossCutting.Utils.LoanStatus.Pending )
                    {
     
                    <td class="text-end">
                        <a href="/LoanApplication/CustomerReject/@item.ApplicationId" class="btn btn-sm btn-outline-primary me-1">
                            <i class="bi bi-pencil-square"></i> Reject
                        </a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>