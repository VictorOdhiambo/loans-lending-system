@model IEnumerable<LoanApplicationService.Service.DTOs.LoanApplicationModule.LoanApplicationDto>
@using LoanApplicationService.CrossCutting.Utils

@{
    ViewData["Title"] = "My Loan Applications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">My Loan Applications</h1>

            @if (TempData["LoanApplicationSuccess"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success!</strong> @TempData["LoanApplicationSuccess"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> @TempData["Error"]
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <h4 class="text-muted mb-3">No Loan Applications Found</h4>
                    <p class="text-muted mb-4">You haven't submitted any loan applications yet.</p>
                    <a href="@Url.Action("Create", "LoanApplication")" class="btn btn-primary">
                        Apply for Your First Loan
                    </a>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Application ID</th>
                                        <th>Loan Product</th>
                                        <th>Status</th>
                                        <th>Requested Amount</th>
                                        <th>Approved Amount</th>
                                        <th>Application Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>#@item.ApplicationId</td>
                                            <td>@item.ProductName</td>
                                            <td>
                                                @{
                                                    var statusClass = "";
                                                    switch ((LoanStatus)item.Status)
                                                    {
                                                        case LoanStatus.Pending:
                                                            statusClass = "badge bg-warning text-dark";
                                                            break;
                                                        case LoanStatus.Approved:
                                                            statusClass = "badge bg-success";
                                                            break;
                                                        case LoanStatus.Rejected:
                                                            statusClass = "badge bg-danger";
                                                            break;
                                                        case LoanStatus.Disbursed:
                                                            statusClass = "badge bg-primary";
                                                            break;
                                                        default:
                                                            statusClass = "badge bg-secondary";
                                                            break;
                                                    }
                                                }
                                                <span class="@statusClass">@((LoanStatus)item.Status)</span>
                                            </td>
                                            <td>@item.RequestedAmount.ToString("C")</td>
                                            <td>
                                                @if (item.ApprovedAmount > 0)
                                                {
                                                    @item.ApprovedAmount.ToString("C")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@item.ApplicationDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("CustomerGetById", "LoanApplication", new { id = item.ApplicationId })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>