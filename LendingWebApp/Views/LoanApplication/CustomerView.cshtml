@model IEnumerable<LoanApplicationService.Service.DTOs.LoanApplicationModule.LoanApplicationDto>
@{
    ViewData["Title"] = "My Loan Applications";
    Layout = User.IsInRole("Customer") ? "~/Views/Customer/Shared/_CustomerLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer View</h1>
<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm border rounded">
        <thead class="table-dark">
                <thead class="table-dark">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ApplicationId)</th>
                <th>@Html.DisplayNameFor(model => model.RequestedAmount)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.ApplicationDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ApplicationId</td>
                    <td>@item.RequestedAmount</td>
                    <td>@item.Status</td>
                    <td>@item.ApplicationDate.ToOffset(TimeSpan.FromHours(3)).ToString("dd/MM/yyyy HH:mm:ss +03:00")</td>
                </tr>
            }
        </tbody>
    </table>
</div>