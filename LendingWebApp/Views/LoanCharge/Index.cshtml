@model List<LoanApplicationService.Service.DTOs.LoanModule.LoanChargeDto>

@{
    ViewData["Title"] = "Loan Charges";
}

<h2 class="mb-4">Loan Charges</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-success">Add New Charge</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Is Penalty</th>
            <th>Is Upfront</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var charge in Model)
            {
                <tr>
                    <td>@charge.Name</td>
                    <td>@charge.Description</td>
                    <td>@charge.Amount.ToString("C")</td>
                    <td>@(charge.IsPenalty ? "Yes" : "No")</td>
                    <td>@(charge.IsUpfront ? "Yes" : "No")</td>
                    <td>
                        <a href="/LoanCharge/Update/@charge.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/LoanCharge/Delete/@charge.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No loan charges found.</td>
            </tr>
        }
    </tbody>
</table>
