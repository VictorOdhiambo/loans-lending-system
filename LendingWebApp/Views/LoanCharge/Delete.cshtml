@model LoanApplicationService.Service.DTOs.LoanModule.LoanChargeDto

@{
    ViewData["Title"] = "Delete Loan Charge";
}

<h2 class="mb-4">Delete Loan Charge</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this loan charge?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Amount</dt>
            <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>

            <dt class="col-sm-4">Is Penalty</dt>
            <dd class="col-sm-8">@Model.IsPenalty</dd>

            <dt class="col-sm-4">Is Upfront</dt>
            <dd class="col-sm-8">@Model.IsUpfront</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm("Delete", "LoanCharge", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
}
