@model LoanApplicationService.Service.DTOs.LoanModule.LoanChargeDto

@{
    ViewData["Title"] = "Delete Loan Charge";
}

<h2 class="mb-4">Delete Loan Charge</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this loan charge?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Is Penalty</dt>
            <dd class="col-sm-10">@Model.IsPenalty</dd>

            <dt class="col-sm-2">Is Upfront</dt>
            <dd class="col-sm-10">@Model.IsUpfront</dd>

            <dt class="col-sm-2">Amount</dt>
            <dd class="col-sm-10">@Model.Amount.ToString("C")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.LoanChargeId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
