@using LoanApplicationService.Web.Helpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<LoanManagementApp.DTOs.NotificationTemplateDto>

@{
    ViewData["Title"] = "Notification Templates";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white px-3 py-2 rounded" style="background: #1565c0;">Notification Templates</h2>
        <a href="/NotificationTemplate/Create" class="btn btn-primary btn-lg shadow">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered" style="background: #e3f2fd;">
            <thead style="background: #1976d2; color: #fff;">
                <tr>
                    <th>Template ID</th>
                    <th>Notification Header</th>
                    <th>Channel</th>
                    <th>Subject</th>
                    <th>Body Text</th>
                    <th class="text-end" style="min-width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="transition: background 0.2s;" onmouseover="this.style.background='#bbdefb'" onmouseout="this.style.background=''">
                        <td>@item.TemplateId</td>
                        <td>@item.NotificationHeader</td>
                        <td>@NotificationHelper.GetChannelDisplayName(item.Channel)</td>
                        <td>@item.Subject</td>
                        <td>@item.BodyText</td>
                        <td class="text-end" style="min-width: 120px;">
                            <a href="/NotificationTemplate/Edit/@item.TemplateId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="/NotificationTemplate/Delete/@item.TemplateId" class="btn btn-sm btn-outline-danger me-1">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
 