@model LoanApplicationService.Service.DTOs.UserModule.UserDTO
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-3">Loans Lending System</h2>
            <div class="card shadow">
                <div class="card-header text-center">
                    <p class="mb-0">Sign In Here</p>
                </div>

                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Model.Email" class="form-label">Email address</label>
                            <input asp-for="Model.Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="Model.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Model.Password" class="form-label">Password</label>
                            <input asp-for="Model.Password" class="form-control" type="password" placeholder="Enter password" />
                            <span asp-validation-for="Model.Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/Account/Register" class="btn btn-outline-secondary btn-sm">Create Account</a>
                            <a href="/Account/ForgotPassword" class="btn btn-link btn-sm">Forgot Password?</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
